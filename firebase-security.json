{
  "rules": {
    "web": {
      "data": {
        "sites": {
          ".read": "auth != null",
          ".write": "auth != null",
          "$site": {
            ".validate": "$site.length === 40 && $site.matches(/^[0-9A-Za-z]*$/)",
            "$user": {
              ".validate": "newData.isString() && newData.val().matches(/^data:image\\/png;base64\\,[0-9A-Za-z|\\/|\\+]*/) && !newData.val().matches(/[<|>|{|}]+/)"
            }
          }
        }
      }
    }
  }
}
